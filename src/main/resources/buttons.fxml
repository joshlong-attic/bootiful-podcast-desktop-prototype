<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root"
      xmlns="http://javafx.com/javafx/8.0.999-ea"
      fx:controller="fm.bootifulpodcast.desktop.ButtonsController">
    <BorderPane style="-fx-background-color: #336699">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <left>
            <Label fx:id="connectedIcon">
                <padding>
                    <Insets right="10.0"/>
                </padding>
            </Label>
        </left>
        <right>
            <HBox fx:id="buttons" alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="newPodcastButton" text="New Podcast"/>
                <Button fx:id="publishButton" text="Publish"/>
                <Button fx:id="saveMediaToFileButton" text="Save File"/>
            </HBox>
        </right>
    </BorderPane>
</VBox>